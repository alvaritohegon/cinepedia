{{#if this.isOwner}}
  <button
    type="button"
    class="btn btn-primary"
    data-bs-toggle="modal"
    data-bs-target="#editModal-{{this._id}}"
  >
    Editar
  </button>

  <!-- Modal -->
  <div
    class="modal fade"
    id="editModal-{{this._id}}"
    data-bs-backdrop="static"
    data-bs-keyboard="false"
    tabindex="-1"
    aria-labelledby="staticBackdropLabel"
    aria-hidden="true"
  >
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content bg-dark text-white">
        <div class="modal-header border-secondary">
          <h1 class="modal-title fs-5" id="staticBackdropLabel">Editar reseña</h1>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="modal"
            aria-label="Close"
          ></button>
        </div>
        <div class="modal-body">
          <form action="/reviews/{{this._id}}/edit" method="post">

            <div class="mb-3">
              <label for="rating" class="col-form-label">Calificación</label>
              <input
                type="number"
                class="form-control"
                name="rating"
                min="1"
                max="5"
                required
                value="{{this.rating}}"
              />
            </div>
            <div class="mb-3">
              <label for="message-text" class="col-form-label">Message:</label>
              <textarea
                class="form-control"
                name="comment"
              >{{this.comment}}</textarea>
            </div>
            <div class="modal-footer">
              <button
                type="button"
                class="btn btn-secondary"
                data-bs-dismiss="modal"
              >Cancelar</button>
              <button class="btn btn-primary">Editar</button>
            </div>

          </form>
        </div>

      </div>
    </div>
  </div>
  
  

  <form action="/reviews/{{this._id}}/delete" method="post">
    <button class="btn btn-danger">Borrar</button>
  </form>

{{/if}}